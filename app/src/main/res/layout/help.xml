<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10pt"
            android:layout_marginTop="3pt" android:layout_gravity="left|center_vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 вариант"
                android:id="@+id/textView" android:layout_gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Позвонить маме"
                android:id="@+id/btnCall" android:layout_gravity="center_horizontal|top" android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="5pt">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 вариант"
            android:id="@+id/tv2" android:layout_gravity="center" android:textSize="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загуглить банкоматы"
            android:id="@+id/btnWeb" android:layout_gravity="center_horizontal|top" android:textSize="19dp"/>
</LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_marginTop="3pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 вариант"
                android:id="@+id/tv3" android:layout_gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Посмотреть карту"
                android:id="@+id/btnMap" android:layout_gravity="center_horizontal|top" android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>