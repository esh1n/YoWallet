<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/fon2">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@drawable/twi">
        <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/spnPerson"
                android:entries="@array/persons" android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="0dp" android:layout_marginRight="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 days"
                android:id="@+id/tvResult" android:layout_gravity="center" android:textStyle="bold"
                android:textSize="30dp" android:typeface="serif" android:textColor="#fcfdff"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить операцию"
                android:id="@+id/btnAdd"
                android:drawableLeft="@drawable/plus" android:background="@drawable/btn_yellow"
                android:layout_margin="3dp" android:textColor="@android:color/background_dark" android:textSize="20dp"
                android:typeface="monospace"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="рублей"
                android:id="@+id/tvRemainder" android:layout_gravity="center" android:textColor="#1a3ed0"
                android:textSize="20dp" android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>